{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "rest-api",
        "port": 8069
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/api/django_project",
          "remoteRoot": "/usr/src/app/django"
        }
      ]
    },
    {
      "name": "Python: Celery Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "celery-worker",
        "port": 8070
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/api/django_project",
          "remoteRoot": "/usr/src/app/django"
        }
      ]
    }
  ]
}
